        <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">


    <link rel="stylesheet" href="/css/comunidades_artesvisuais.css">
</head>
<body>
    <nav>

        <div class="container">

            
            <a href="/home" class="logo"><img src="/img/logo_ziuu.png" alt=""></a>
             
            <ul>
                <li><a href="/home" ><i class="uil uil-estate"></i></a></li>
                <li><a href="/divulgacao"><i class="uil uil-plus-circle"></i></a></li>
                <li><a href="/comunidades"><i class="uil uil-comment"></i></a></li>
                
            </ul>

            <div class="cadastro">
                <a href="/perfil"><img src="/img/fotodeperfil2.png" alt=""  class="fotodeperfil"></a> <!--foto-->
            </div>
            
            
        </div>


    </nav>

    <div class="left-section">
       

       <div class="comu_comunidades">
         <h3>Comunidades</h3>
         <ul>
            <a href="/comunidades_artesvisuais"><li>#artesvisuais</li></a>
            <a href="/comunidades_musicas"><li>#musicas</li></a>
            <a href="/comunidades_artedigital"><li>#artedigital</li></a>
            <a href="/comunidades_artesanato"><li>#artesanato</li></a>
            <a href="/comunidades_audiovisual"><li>#audiovisual</li></a>
         </ul>

        </div>
    </div>
<div class="meio">
    <div class="titul">
        <h3>Artes visuais</h3>

    </div>  
<section class="mensagens-geral" id="mensagens-geral">
    <% mensagens.forEach(function(msg){ %>
        <div id="mensagem">
            <span class="mensagens-usu"><%=msg.usuario%></span>

             <!-- <a href="">
                <button class="editar">Editar</button>
            </a> -->
            <a href="/deletarmsg/<%=msg.id_comunidade%>">
                <button class="editar">Deletar</button>
            </a>
            <p class="mensagens-men"><%=msg.mensagem%></p>
            <img class="mensagens-img" src="<%=msg.img_divulgacao%>" alt="">
            <!-- <video src="<%=msg.img_divulgacao%>"></video> -->

           
        </div>
    <% }); %>
</section>
    

   



    <section class="postar">
        <form action="/enviarmsarte" method="post" enctype="multipart/form-data">
            <div>
                <img src="" alt="">
                <input class="usuario_divulgacao" type="text"  name="usuario_divulgacao" autocomplete="off">
            </div>
            <div>
                <input class="usuario_divulgacao2" type="text" value="" name="mensagem" id="" placeholder="Conecte-se..." autocomplete="off">
            </div>
            <div class="img_post">
                <input class="img_divulgacao" type="file" name="img_divulgacao"  autocomplete="off">
                <button>Enviar</button>
            </div>
        </form>
   </section>
   
</div>
</body>
</html>